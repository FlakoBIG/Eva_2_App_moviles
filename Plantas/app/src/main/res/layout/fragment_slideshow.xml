<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fotos_planta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="48dp">

        <TextView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/verde_lima"
            android:gravity="center"
            android:text="Agregar foto"
            android:textColor="#FFFFFF"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_subir_foto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/verde_lima"
                android:maxWidth="60dp"
                android:maxHeight="60dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_menu_camera" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_plant_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/cuadrado_rendodo"
                    android:hint="Ingresa tu nombre" />

                <Button
                    android:id="@+id/btn_agregar_planta"
                    android:layout_width="248dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/verde_lima"
                    android:text="Subir"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="665dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="8dp">

            </FrameLayout>
        </LinearLayout>

        <GridLayout
            android:layout_width="400dp"
            android:layout_height="487dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:padding="8dp"
            android:rowCount="3"
            android:useDefaultMargins="true"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="166dp">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="163dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cala" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="162dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cala" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="161dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cala" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cala" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="155dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cala" />

            <ImageView
                android:id="@+id/img6"
                android:layout_width="163dp"
                android:layout_height="149dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cala" />
        </GridLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
