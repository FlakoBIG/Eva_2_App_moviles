<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fotos_planta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="48dp">

        <TextView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/verde_lima"
            android:gravity="center"
            android:text="Agregar foto"
            android:textColor="#FFFFFF"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_subir_foto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/verde_lima"
                android:maxWidth="60dp"
                android:maxHeight="60dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_menu_camera" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/btn_agregar_planta"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:backgroundTint="@color/verde_lima"
                    android:text="Subir"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- Contenedor de las imágenes y los textos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Primera imagen con texto "1 día" -->
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cala" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    android:text="1 día"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:background="#80000000"
                    android:textSize="14sp" />
            </FrameLayout>

            <!-- Segunda imagen con texto "3 días" -->
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cala" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    android:text="3 días"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:background="#80000000"
                    android:textSize="14sp" />
            </FrameLayout>
        </LinearLayout>

        <!-- Tercera imagen con texto "20 días" centrado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cala" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="4dp"
                    android:text="20 días"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:background="#80000000"
                    android:textSize="14sp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
